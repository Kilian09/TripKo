<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cabecera"
            app:layout_constraintVertical_bias="0.48000002">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ciudadesPrincipalesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5sp"
                    android:textSize="24sp"
                    tools:text="@string/ciudades_principales_title" />

                <LinearLayout
                    android:id="@+id/seulLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="10sp"
                    android:foregroundGravity="center">


                    <ImageView
                        android:id="@+id/n1_seul"
                        android:layout_width="73sp"
                        android:layout_height="80sp"
                        app:srcCompat="@drawable/n1" />

                    <TextView
                        android:id="@+id/seulTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="@font/rancho"
                        android:textSize="50sp"
                        tools:text="@string/ciudades_principales_seul" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textSeulLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/seulImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10sp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/seul" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/busanLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6sp"
                    android:layout_marginEnd="10sp"
                    android:foregroundGravity="center">

                    <ImageView
                        android:id="@+id/n2_busan"
                        android:layout_width="80sp"
                        android:layout_height="96sp"
                        app:srcCompat="@drawable/n2" />

                    <TextView
                        android:id="@+id/busanTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        android:fontFamily="@font/rancho"
                        android:textSize="50sp"
                        tools:text="@string/ciudades_principales_busan" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textBusanLinerLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/busanImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20sp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/busan" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/incheonLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="-5sp"
                    android:layout_marginEnd="10sp"
                    android:foregroundGravity="center">

                    <ImageView
                        android:id="@+id/n3_incheon"
                        android:layout_width="75dp"
                        android:layout_height="91dp"
                        app:srcCompat="@drawable/n3" />

                    <TextView
                        android:id="@+id/incheonTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="@font/rancho"
                        android:textSize="50sp"
                        tools:text="@string/ciudades_principales_incheon" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textIncheonLinerLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/incheonImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="-20sp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/incheon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/daeguLinerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7sp"
                    android:layout_marginEnd="10sp"
                    android:foregroundGravity="center">

                    <ImageView
                        android:id="@+id/n4_daegu"
                        android:layout_width="77sp"
                        android:layout_height="93sp"
                        app:srcCompat="@drawable/n4" />

                    <TextView
                        android:id="@+id/daeguTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="@font/rancho"
                        android:textSize="50sp"
                        tools:text="@string/ciudades_principales_daegu" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textDaeguLinerLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/daeguImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="-20sp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/daegu" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/daejeonLinerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="-10sp"
                    android:layout_marginEnd="10sp"
                    android:foregroundGravity="center">

                    <ImageView
                        android:id="@+id/n5_daejeon"
                        android:layout_width="75dp"
                        android:layout_height="91dp"
                        app:srcCompat="@drawable/n5" />

                    <TextView
                        android:id="@+id/daejeonTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="10sp"
                        android:fontFamily="@font/rancho"
                        android:textSize="50sp"
                        tools:text="@string/ciudades_principales_daejeon" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/textDaejeonLinerLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/daejeonImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20sp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/daejeon" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>