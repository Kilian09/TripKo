<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16sp"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/restaurantes_platos_detail_rounded1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contactosContent1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark"
            tools:text="@string/contactos_info" />

        <ImageView
            android:id="@+id/ic_llamar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            tools:srcCompat="@drawable/ic_btn_contactos" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:background="@drawable/restaurantes_platos_detail_rounded2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/restauranteContent2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark"
            tools:text="@string/contactos_info" />

        <ImageView
            android:id="@+id/ic_llamar2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            tools:srcCompat="@drawable/ic_btn_contactos" />

    </LinearLayout>
</LinearLayout>